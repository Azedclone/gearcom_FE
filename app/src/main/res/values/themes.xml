<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gearcom" parent="Theme.AppCompat">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Gearcom" parent="Base.Theme.Gearcom">
        <item name="android:background">@color/primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">28dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:height">64dp</item>
        <item name="android:textColorHint">#FFFFFFFF</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>